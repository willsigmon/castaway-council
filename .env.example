# Database Configuration
# Required: PostgreSQL connection string
# For local dev: postgresql://postgres:postgres@localhost:5432/castaway
# For Supabase: postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/castaway

# Supabase Configuration
# Required: Supabase project URL and keys
# Get these from your Supabase project settings
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# JWT Secret
# Required: Random secret for JWT signing (min 32 characters)
JWT_SECRET=your-jwt-secret-min-32-characters-long

# Temporal Configuration
# Optional: Temporal server address for workflow orchestration
# Leave empty if not using Temporal (workflows won't run)
# For local: localhost:7233
# For Temporal Cloud: temporal.your-domain.com:7233
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Push Notifications (VAPID)
# Optional: Web Push API keys for browser notifications
# Generate with: node -e "const webpush = require('web-push'); console.log(JSON.stringify(webpush.generateVAPIDKeys(), null, 2))"
VAPID_PUBLIC_KEY=your_public_key_here
VAPID_PRIVATE_KEY=your_private_key_here
VAPID_SUBJECT=mailto:your@email.com

# Cron Jobs
# Required for cron endpoint security
# Random secret to authenticate cron requests
CRON_SECRET=your-random-cron-secret-here

# Worker Authentication
# Optional: Secret for worker/admin endpoints (e.g., challenge scoring)
WORKER_SECRET=your-worker-secret-here

# Application Configuration
# Optional: Public URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
# Development, staging, or production
NODE_ENV=development

# Logging
# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Fast Forward Mode
# Optional: Enable fast-forward for testing (uses minutes instead of hours)
FAST_FORWARD_ENABLED=false

# Vercel
# Automatically set by Vercel (don't set manually)
# VERCEL=true
