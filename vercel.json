{
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "corepack enable pnpm && pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/**/*.tsx": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/phase-transition",
      "schedule": "*/5 * * * *"
    }
  ]
}
